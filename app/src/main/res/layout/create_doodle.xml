<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mahe.mypaint.CreateDoodle">

    <com.example.mahe.mypaint.PaintView
        android:id="@+id/paintView"
        android:layout_width="match_parent"
        android:layout_height="480dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/paintView"
        android:layout_marginEnd="116dp"
        android:layout_marginTop="37dp"
        android:onClick="plusClick"
        android:src="@drawable/ic_add_circle_black_24dp" />

    <ImageButton
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignStart="@+id/imageButton"
        android:layout_alignTop="@+id/imageButton"
        android:layout_marginStart="67dp"
        android:onClick="minusClick"
        android:src="@drawable/ic_do_not_disturb_on_black_24dp" />
</RelativeLayout>
